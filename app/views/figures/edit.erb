<h2>Edit Existing Figure</h2>

<strong>Name: <%= @figure.name %></strong>
<p>
  <form action="/figures/<%= @figure.id %>" method="post">
    <input type="hidden" name="_method" id="hidden" value="patch">
    <label for="Name">Edit Name</label>

    <input type="text" name="figure[name]" id="figure_name" value="">

    <p><label><strong>Titles</strong></label></p>

    <% @titles.each do |title| %>
    <p><label><%= title.name %> </label><input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>" <%= "checked" if @figure.titles.include?(title) %> ></p>
    <% end %>

    <label><strong>Create New Title:</strong></label>
    <p><input type="text" name="title[name]" id="new_title"></p>

    <label><strong>Landmarks</strong></label>

    <% @landmarks.each do |landmark| %>
    <p><label><%= landmark.name %> </label><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>"></p>
    <% end %>

    <label><strong>Create New Landmark:</strong></label>

    <p>
      <label>Name: </label>
      <input type="text" name="landmark[name]" id="new_landmark">
      <label>Year: </label>
      <input type="text" name="landmark[year]">
      <input type="submit" value="Edit Figure">
    </p>

  </form>
</p>
<a class="button" href="/figures">Figures</a>
<a class="button" href="/">Home</a>
